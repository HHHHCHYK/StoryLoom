<Window x:Class="StoryLoom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoryLoom"
        xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Wpf;assembly=Microsoft.AspNetCore.Components.WebView.Wpf"
        mc:Ignorable="d"
        Title="StoryLoom - 故事织机" Height="768" Width="1024"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border Background="#1e1e1e" CornerRadius="8">
        <Grid>
            <!-- A subtle draggable title bar area at the very top so users can move the window easily -->
            <Grid Height="30" VerticalAlignment="Top" Background="Transparent" Panel.ZIndex="1" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" />
            <blazor:BlazorWebView HostPage="wwwroot/index.html" Services="{DynamicResource Services}" Margin="0,5,0,0">
                <blazor:BlazorWebView.RootComponents>
                    <blazor:RootComponent Selector="#app" ComponentType="{x:Type local:BlazorApp}" />
                </blazor:BlazorWebView.RootComponents>
            </blazor:BlazorWebView>
        </Grid>
    </Border>
</Window>