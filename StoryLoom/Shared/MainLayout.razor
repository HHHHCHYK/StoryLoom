@inherits LayoutComponentBase
@inject StoryLoom.Services.AppControlService AppControl

<div class="app-container">
    <div class="sidebar">
        <NavMenu @bind-Collapsed="isSidebarCollapsed" />
    </div>

    <div class="main">
        <ToastContainer />
        <div class="content">
            @Body
        </div>
    </div>
    
    <!-- Custom Close Button for Frameless Window (Hover to reveal) -->
    <div class="close-btn-container">
        <button class="app-close-btn" @onclick="CloseApplication" title="Close StoryLoom">âœ•</button>
    </div>
</div>

@code {
    private bool isSidebarCollapsed = false;

    private async Task CloseApplication()
    {
        await AppControl.PerformShutdownAsync();
    }
}

<style>
    :root {
        --bg-color: #1e1e1e;
        --text-color: #d4d4d4;
    }

    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: var(--bg-color);
        color: var(--text-color);
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .app-container {
        display: flex;
        height: 100vh;
        width: 100vw;
        position: relative; /* For the close button */
        transform: scale(0.95);
        transform-origin: center center;
    }

    .main {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        background-color: #1e1e1e;
    }

    .content {
        flex: 1;
        overflow-y: hidden; /* Let inner components manage their own scrolling */
        display: flex;
        flex-direction: column;
    }
    
    /* Detection zone for the close button */
    .close-btn-container {
        position: absolute;
        top: 0;
        right: 0;
        width: 100px;
        height: 80px;
        z-index: 9999;
        display: flex;
        justify-content: flex-end;
        align-items: flex-start;
        padding-top: 15px;
        padding-right: 20px;
    }
    
    .app-close-btn {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background-color: rgba(60, 60, 60, 0.6); 
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        font-size: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease, background-color 0.2s, transform 0.1s;
        cursor: pointer;
    }
    
    /* Reveal button when hovering over the container corner */
    .close-btn-container:hover .app-close-btn {
        opacity: 1;
    }

    .app-close-btn:hover {
        background-color: rgba(224, 68, 62, 0.9); /* Nice translucent red */
        border-color: rgba(224, 68, 62, 1);
    }
    
    .app-close-btn:active {
        transform: scale(0.95);
    }
</style>
